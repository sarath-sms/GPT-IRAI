{
  "openapi": "3.0.3",
  "info": {
    "title": "Iraitchi API",
    "version": "1.0.0",
    "description": "OpenAPI 3.0 specification for the Iraitchi delivery service backend (superadmin, admin, driver, user). Auto-generated starter spec."
  },
  "servers": [
    {
      "url": "http://localhost:4000",
      "description": "Local development"
    }
  ],
  "tags": [
    { "name": "Auth", "description": "Login endpoints for different roles" },
    { "name": "SuperAdmin", "description": "Super admin operations (shops, admins, drivers, products, dashboard)" },
    { "name": "Admin", "description": "Admin operations (shop-level dashboard, orders, assign)" },
    { "name": "Driver", "description": "Driver operations (assigned orders, status updates)" },
    { "name": "User", "description": "Customer endpoints (OTP flow, place orders, profile)" },
    { "name": "Products", "description": "Public product listing and admin CRUD" },
    { "name": "Shops", "description": "Shops CRUD and status toggle" },
    { "name": "Orders", "description": "Orders CRUD and status management" }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "msg": { "type": "string" },
          "error": { "type": "string" }
        }
      },
      "AuthRequest": {
        "type": "object",
        "properties": {
          "mobile": { "type": "string", "example": "9876543210" },
          "password": { "type": "string", "example": "secret123" }
        },
        "required": ["mobile", "password"]
      },
      "AuthResponse": {
        "type": "object",
        "properties": {
          "token": { "type": "string", "example": "eyJhbGci..." },
          "user": {
            "$ref": "#/components/schemas/UserShort"
          }
        }
      },
      "UserShort": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "example": "64f0a1..." },
          "name": { "type": "string", "example": "John Doe" },
          "mobile": { "type": "string", "example": "9876543210" },
          "role": { "type": "string", "example": "admin" }
        }
      },
      "Shop": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "pincode": { "type": "string" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "isOpen": { "type": "boolean" },
          "openTime": { "type": "string" },
          "closeTime": { "type": "string" },
          "admins": { "type": "array", "items": { "type": "string" } },
          "drivers": { "type": "array", "items": { "type": "string" } }
        }
      },
      "Admin": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "name": { "type": "string" },
          "mobile": { "type": "string" },
          "role": { "type": "string", "example": "admin" },
          "pincodes": { "type": "array", "items": { "type": "string" } }
        }
      },
      "Driver": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "name": { "type": "string" },
          "mobile": { "type": "string" },
          "assignedPincodes": { "type": "array", "items": { "type": "string" } },
          "assignedOrders": { "type": "array", "items": { "type": "string" } },
          "isActive": { "type": "boolean" }
        }
      },
      "PriceOption": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "price": { "type": "number" },
          "available": { "type": "boolean" }
        }
      },
      "CutType": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "price": { "type": "number" }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "name": { "type": "string" },
          "category": { "type": "string", "example": "fish" },
          "subCategory": { "type": "string" },
          "description": { "type": "string" },
          "image": { "type": "string" },
          "available": { "type": "boolean" },
          "priceOptions": { "type": "array", "items": { "$ref": "#/components/schemas/PriceOption" } },
          "price": { "type": "number" },
          "netWeight": { "type": "string" },
          "cutTypes": { "type": "array", "items": { "$ref": "#/components/schemas/CutType" } }
        }
      },
      "OrderItem": {
        "type": "object",
        "properties": {
          "product": { "type": "string" },
          "name": { "type": "string" },
          "category": { "type": "string" },
          "image": { "type": "string" },
          "size": { "type": "string" },
          "cutType": { "type": "string" },
          "netWeight": { "type": "string" },
          "qty": { "type": "number" },
          "unitPrice": { "type": "number" },
          "totalPrice": { "type": "number" }
        }
      },
      "Order": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "user": { "type": "string" },
          "shop": { "type": "string" },
          "pincode": { "type": "string" },
          "items": { "type": "array", "items": { "$ref": "#/components/schemas/OrderItem" } },
          "subtotal": { "type": "number" },
          "gst": { "type": "number" },
          "deliveryFee": { "type": "number" },
          "total": { "type": "number" },
          "deliverySlot": { "type": "string" },
          "paymentId": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["pending", "paid", "processing", "out-for-delivery", "delivered", "cancelled"]
          },
          "address": {
            "type": "object",
            "properties": {
              "houseId": { "type": "string" },
              "addr1": { "type": "string" },
              "addr2": { "type": "string" },
              "geo": {
                "type": "object",
                "properties": {
                  "lat": { "type": "number" },
                  "long": { "type": "number" }
                }
              }
            }
          },
          "driver": { "type": "string" },
          "admin": { "type": "string" },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      },
      "OTPEntry": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "mobile": { "type": "string" },
          "pincode": { "type": "string" }
        },
        "required": ["mobile", "pincode"]
      },
      "OTPVerify": {
        "type": "object",
        "properties": {
          "mobile": { "type": "string" },
          "otp": { "type": "string" }
        },
        "required": ["mobile", "otp"]
      },
      "AssignOrdersPayload": {
        "type": "object",
        "properties": {
          "driverId": { "type": "string" },
          "orderIds": { "type": "array", "items": { "type": "string" } }
        },
        "required": ["driverId", "orderIds"]
      }
    }
  },
